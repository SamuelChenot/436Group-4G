# File name: screens.kv

#The list of all screens that are contained within the menu manager. every feature that needs a screen should be here
<MenuManager>:
	HomeMountainScreen:
    SettingsScreen:
    MountainFinderScreen:

<SettingsScreen>:
	name: "Settings"

	#attributes for the python file
	user_name: _user_name
	zipcode: _zip_code
	city_state_label: _city_state_label
	password: _password
	repeat_password: _repeat_password

	BoxLayout:
		orientation: "vertical"
		canvas.before:
			Color:
				rgba: 1, 1, 1, .5
			Rectangle:
				pos: self.pos
				size: self.size

		Label:
			text: "settings screen"
            valign: 'middle'
			size_hint_y: None
			height: 20

		#GridLayout of all the user input lines for the settings
		GridLayout:
			cols: 2
			spacing: 10
			Label:
				text: "Username:"
				size_hint: (None, None)
				size: (100, 30)
			TextInput:
				id: _user_name
			Label:
				text: "Zip Code:"
				size_hint: (None, None)
				size: (100, 30)
			TextInput:
				id: _zip_code
			Label:
				text: "password:"
				size_hint: (None, None)
				size: (100, 30)
			TextInput:
				multiline: False
				password: True
				id: _password
			Label:
				text: "repeat password:"
				size_hint: (None, None)
				size: (120, 30)
			TextInput:
				multiline: False
				password: True
				id: _repeat_password
			
				

		Label:
			id: _city_state_label
			text: ""

		Button:
			text: "Update Settings"
			on_release: root.updateSettings()

<HomeMountainScreen>:
	name: "HomeMountain"

	BoxLayout:
		orientation: "vertical"
		canvas.before:
			Color:
				rgba: 1, 1, 1, .5
			Rectangle:
				pos: self.pos
				size: self.size
		
		Label:
			text: "Home Mountains Screen"
            valign: 'middle'
			size_hint_y: None
			height: 45

